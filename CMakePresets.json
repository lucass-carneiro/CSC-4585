{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "x64-debug-vcpkg",
      "displayName": "x64 Debug using Vcpkg",
      "binaryDir": "${sourceDir}/build-debug-vcpkg",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "VCPKG_ROOT": "$penv{VCPKG_ROOT}"
      }
    }
  ]
}